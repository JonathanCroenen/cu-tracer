---
Hover:
  ShowAKA: Yes
InlayHints:
  Enabled: No
---
If:
  PathMatch: .*\.cuh?

# https://docs.nvidia.com/cutlass/media/docs/cpp/ide_setup.html#global-config
CompileFlags:
  Compiler: /usr/local/cuda-13.0/bin/nvcc
  Add:
    - --cuda-path=/usr/local/cuda-13.0
    - --cuda-gpu-arch=sm_75   
    - -I/usr/local/cuda-13.0/include
    - -I/usr/local/cuda-13.0/include/cccl
    - "-xcuda"
    - "-ferror-limit=0"
    - --std=c++17
    - "-D__INTELLISENSE__"
    - "-D__CLANGD__"
    - "-DCUDA_13_0_SM75_FEATURES_SUPPORTED"
    - "-D_LIBCUDACXX_STD_VER=13"
    - "-D__CUDACC_VER_MAJOR__=13"
    - "-D__CUDACC_VER_MINOR__=0"
    - "-D__CUDA_ARCH__=750"
    - "-D__CUDA_ARCH_FEAT_SM75_ALL"
    - "-Wno-invalid-contexpr"
  Remove:
    - "-Xfatbin*"
    - "-gencode*"
    - --generate-code=*
    - -rdc=true 
    - "-ccbin*"
    - --compiler-options*
    - "--expt-extended-lambda"
    - "--expt-relaxed-constexpr"
    - "-forward-unknown-to-host-compiler"
    - "-Werror=cross-execution-space-call"

Diagnostics:
  Suppress:
    - "variadic_device_fn"
    - "attributes_not_allowed"
---
If:
  PathMatch: .*\.(cpp|h)

CompileFlags:
  Add:
    - -xc++
